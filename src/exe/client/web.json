{
    "/login.do": {
        "ok": {
            "query": "login",
            "params": [ "userid", "password" ],
            "reply": "login",
            "extra": [ "token", "permissions" ],
            "template": "{{permissions}}_home",
            "cookie": {
                "write": "sessionid"
            }
        }
    },
    "/admin_home.do": {
        "logout": {
            "query": "logout",
            "params": [ "token" ],
            "reply": "logout",
            "template": "login",
            "cookie": {
                "read": "sessionid"
            }
        },
        "add_user": {
            "query": "show_user",
            "params": [ "token", "username", "email", "permissions" ],
            "reply": "user",
            "extra": [ "token", "password", "validity" ],
            "template": "admin_add",
            "cookie": {
                "read": "sessionid"
            }
        }
    },
    "/admin_add.do": {
        "admin_add": {
            "template": "admin_home"
        }
    },
    "/user_home.do": {
        "logout": {
            "query": "logout",
            "params": [ "token" ],
            "reply": "logout",
            "template": "login",
            "cookie": {
                "read": "sessionid"
            }
        },
        "list": {
            "query": "all_list",
            "params": [ "token" ],
            "reply": "list",
            "extra": [ "token", "names" ],
            "template": "user_home",
            "cookie": {
                "read": "sessionid"
            }
        },
        "pass": {
            "query": "get_pass",
            "params": [ "token", "key" ],
            "reply": "pass",
            "extra": [ "token", "key", "pass", "properties" ],
            "template": "user_pass",
            "cookie": {
                "read": "sessionid"
            }
        },
        "add_prompt": {
            "query": "set_prompt_pass",
            "params": [ "token", "key", "pass1", "pass2" ],
            "reply": "pass",
            "extra": [ "token", "key", "pass", "properties" ],
            "template": "user_pass",
            "cookie": {
                "read": "sessionid"
            }
        },
        "add_recipe": {
            "query": "set_recipe_pass",
            "params": [ "token", "key", "recipe" ],
            "reply": "pass",
            "extra": [ "token", "key", "pass", "properties" ],
            "template": "user_pass",
            "cookie": {
                "read": "sessionid"
            }
        },
        "password": {
            "query": "chpwd_user",
            "params": [ "token", "old", "pass1", "pass2" ],
            "reply": "user",
            "extra": [ "token", "password", "validity" ],
            "template": "user_chpwd",
            "cookie": {
                "read": "sessionid"
            }
        }
    },
    "/user_pass.do": {
        "user_pass": {
            "template": "user_home"
        }
    }
}
